# GitHub Configuration
VITE_GITHUB_TOKEN=your_github_personal_access_token
VITE_GITHUB_OWNER=your_github_username
VITE_GITHUB_REPO=your_repository_name
VITE_BASE_URL=https://your-username.github.io/your-repo-name

# Analytics (Optional)
VITE_GA_ID=your_google_analytics_id
VITE_PLAUSIBLE_DOMAIN=your_plausible_domain

# Features Configuration
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SEARCH=true

# Theme Configuration
VITE_DEFAULT_THEME=system  # light, dark, or system
VITE_PRIMARY_COLOR=#0f172a

# Cache Configuration
VITE_CACHE_DURATION=300000  # 5 minutes in milliseconds

# API Configuration
VITE_API_TIMEOUT=5000  # 5 seconds
VITE_MAX_RETRIES=3

# Development Configuration
VITE_DEBUG_MODE=false